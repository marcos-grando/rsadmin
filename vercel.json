{
    "version": 2,
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 30
        },
        "api/ping.js": {
            "memory": 256,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}